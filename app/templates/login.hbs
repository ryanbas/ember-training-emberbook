<link rel="stylesheet" type="text/css" href="/assets/auth.css">

<div class="container">

  <form class="form-signin">
    <h1 class="form-signin-heading text-muted">Sign In</h1>

    {{#if errorMessage}}
      <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}

    {{input value=email type="text" class="form-control" placeholder="Email address" autofocus="autofocus"}}
    {{input value=password type="password" class="form-control" placeholder="Password"}}
    <button {{action "signIn"}} class="btn btn-lg btn-primary btn-block" type="submit">
      Sign In
    </button>
  </form>

</div>
