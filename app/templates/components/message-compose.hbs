<div class="form-group">
  <label for="recipient">To</label>
  {{bootstrap-tokenfield tokens=message.recipients}}

  <ul>
    {{#each message.recipients as |r|}}
      <li>{{r}}</li>
    {{/each}}
  </ul>
  <button {{action 'addAnother'}}>Add Another</button>
</div>
<div class="form-group">
  <label for="body">Message</label>
  {{textarea value=body id="body" class="form-control" rows=3}}
</div>

<div class="form-group">
  <button {{action "send"}} type="submit" class="btn btn-default">Submit</button>
</div>

{{markdown-preview text=body}}
